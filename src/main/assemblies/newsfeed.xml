<assembly>
    <id>distro</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!--
    <files>
        <file>
            <source>${project.build.directory}/${artifact.artifactId}-${artifact.version}.jar</source>
            <outputDirectory>repo-${project.version}/lib</outputDirectory>
        </file>
    </files>
    -->
    <fileSets>
        <!-- Distro files, readme, licenses, etc -->
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>newsfeed-${project.version}/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/conf</directory>
            <outputDirectory>newsfeed-${project.version}/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../core/target/</directory>
            <outputDirectory>newsfeed-${project.version}/lib</outputDirectory>
            <includes>
                <include>newsfeed-core-${project.version}.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../client/target/</directory>
            <outputDirectory>newsfeed-${project.version}/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../client/bin</directory>
            <outputDirectory>newsfeed-${project.version}/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../client/target/newsfeed-client-0.9-SNAPSHOT-client/newsfeed-client-0.9-SNAPSHOT/lib/</directory>
            <outputDirectory>newsfeed-${project.version}/lib</outputDirectory>
            <includes>
                <include>jline-0.9.94.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>newsfeed-${project.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>

</assembly>
